<% flash.each do |name, msg| %>
    <div class="alert alert-<%= (name == 'notice' || name == 'success') ? "success" : "danger" %>" role="alert">
      <a class="close" data-dismiss="alert">&#215;</a>
      <%= content_tag :div, msg.html_safe, :id => "flash_#{name}" if msg.is_a?(String) %>
    </div>
<% end %>